<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#49BFEC"
    tools:context=".ilanDetayFragment">

    <ScrollView
        android:layout_width="336dp"
        android:layout_height="190dp"
        android:layout_marginTop="31dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="İlan Başlığı :"
                android:textSize="22sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="340dp" />

            <TextView
                android:id="@+id/gelenbasliktextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="249dp"
                tools:layout_editor_absoluteY="340dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Periyot :"
                android:textSize="22sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="407dp" />

            <TextView
                android:id="@+id/gelenperiyottextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="249dp"
                tools:layout_editor_absoluteY="404dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Şehir :"
                android:textSize="22sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="442dp" />

            <TextView
                android:id="@+id/gelencitestextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="249dp"
                tools:layout_editor_absoluteY="436dp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:text="Mahalle :"
                android:textSize="22sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="511dp" />

            <TextView
                android:id="@+id/gelenmahalleikitextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="249dp"
                tools:layout_editor_absoluteY="500dp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="İlçe :"
                android:textSize="22sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="477dp" />

            <TextView
                android:id="@+id/gelenilcetextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="249dp"
                tools:layout_editor_absoluteY="468dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fiyat :"
                android:textSize="22sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="373dp" />

            <TextView
                android:id="@+id/gelenFiyattextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="249dp"
                tools:layout_editor_absoluteY="372dp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Açıklama :"
                android:textSize="22sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="551dp" />

            <TextView
                android:id="@+id/gelenaciklamatextView"
                android:layout_width="204dp"
                android:layout_height="79dp"
                android:text="TextView"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="191dp"
                tools:layout_editor_absoluteY="539dp" />
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/backbtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:onClick="geriDon"
            android:padding="14dp"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="İlan Detay"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold">

        </TextView>


    </RelativeLayout>


    <ImageView
        android:id="@+id/ilanDetayimage"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
        tools:src="@tools:sample/backgrounds/scenic" />

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="29dp"
        android:layout_marginRight="10dp"
        android:background="#FFFFFF"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ilanDetayimage">

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="profile_image"
            android:src="@drawable/ic_baseline_account_circle_24">

        </ImageView>

        <TextView
            android:id="@+id/full_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/profile_image"
            android:text="DENEME DENEME"
            android:textSize="20sp">

        </TextView>

        <TextView
            android:id="@+id/user_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/full_name"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/profile_image"
            android:text="05369133613"
            android:textSize="14sp">

        </TextView>

        <Button
            android:id="@+id/button"
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_email"
            android:layout_alignEnd="@+id/user_email"
            android:layout_alignBottom="@+id/user_email"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="-40dp"
            android:layout_marginBottom="-39dp"
            android:text="KİRALA" />


    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>